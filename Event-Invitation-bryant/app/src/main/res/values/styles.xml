<resources>
    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>
    <style name="OpenSansTextApperanceReg"><item name="android:fontFamily">@font/opensans_reg</item></style>
    <style name="OpenSansTextApperanceMed"><item name="android:fontFamily">@font/opensans_med</item></style>
    <style name="OpenSansTextApperanceBold"><item name="android:fontFamily">@font/opensans_bold</item></style>
</resources>